<%- include('../partials/header.ejs')%>

  <div class="container-fluid page-body-wrapper">
    <%- include('../partials/sidebar.ejs')%>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title text-center mb-4">Cập nhật danh mục</h4>
              <form class='forms-sample' action="/update-category" method="POST">
                <div class="form-group">
                  <input type="text" value="<%= data?.id%>" name="id" style="display: none;">
                  <label for="name">Tên danh mục</label>
                  <input type="text" value="<%= data?.name%>" class="form-control form-control-sm" id="name" name="name"
                    placeholder="Tên danh mục">
                </div>
                <div class="form-group">
                  <label for="desc">Mô tả danh mục</label>
                  <textarea class="form-control form-control-sm" id="desc" name="desc"
                    rows="6"><%= data?.desc%></textarea>
                </div>
                <div style="display: flex; justify-content: center;">
                  <button type="submit" class="btn btn-gradient-primary me-2">Cập nhật</button>
                  <button class="btn btn-light">Cancel</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
  </div>
  <%- include('../partials/footer.ejs')%>