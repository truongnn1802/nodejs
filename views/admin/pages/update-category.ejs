<%- include('../partials/header.ejs')%>

<div class="container-fluid page-body-wrapper">
  <%- include('../partials/sidebar.ejs')%>
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title text-center mb-4">Cập nhật danh mục</h4>
          <form class="forms-sample" action="/admin/update-category" method="POST">
            <div class="form-group" style="width: 100%">
              <input
                type="text"
                value="<%= data?.id%>"
                name="id"
                style="display: none"
              />
              <label for="name">Tên danh mục</label>
              <input
                type="text"
                value="<%= data?.name%>"
                class="form-control form-control-sm"
                id="name"
                name="name"
                placeholder="Tên danh mục"
              />
            </div>
            <div class="form-group" style="width: 100%">
              <label for="desc">Mô tả danh mục</label>
              <textarea
                class="form-control form-control-sm"
                id="desc"
                name="desc"
                rows="6"
              >
<%= data?.description%>
            </textarea
              >
            </div>
            <div id="add-sub-cate" style="position: relative; margin-top: 10px">
              <h6>Thêm danh mục con</h6>
              <% data?.cate_sub.map((sub)=>{%>
              <div class="flex-align-center">
                <input
                  type="text"
                  class="form-control"
                  name="cate_sub"
                  value="<%= sub.value%>"
                  placeholder="Nhập danh mục con"
                />
                <input
                  type="text"
                  style="display: none;"
                  name="id_cate_sub"
                  value="<%= sub.key%>"
                />
              </div>
              <%})%>

              <span
                id="add-row"
                class="mdi mdi-plus-circle"
                style="
                  font-size: 24px;
                  cursor: pointer;
                  color: #e9d3ff;
                  position: absolute;
                  top: 0;
                  right: 0;
                "
              >
              </span>
            </div>
            <div style="display: flex; justify-content: center">
              <button type="submit" class="btn btn-gradient-primary me-2">
                Cập nhật
              </button>
              <button class="btn btn-light">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer.ejs')%>
