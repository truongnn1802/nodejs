<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/admin/asset/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/admin/asset/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="/admin/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="/admin/asset/images/favicon.ico" />
    <style>
      .form-group{
        width: 100%;
      }
    </style>
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <img src="/admin/asset/images/logo.svg">
                </div>
                <h4>New here?</h4>
                <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                <form class="pt-3" method="post" action="/sign-up" enctype="multipart/form-data">
                  <div class="form-group">
                    <label for="name">Tên người dùng</label>
                    <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Tên người dùng">
                    <% if (exist.email) { %>
                      <script>
                          const name = document.getElementById('name');
                          if (name.value.trim() === "") {
                              name.classList.add('required');
                              name.placeholder = 'tên đã tồn tại';
                              e.preventDefault();
                          } else {
                              name.classList.remove('required');
                          }
                      </script>
                  <% } %>
                  </div>
                  <div class="form-group">
                    <select style="border: solid 2px #e9d3ff;" class="form-control form-control-lg" id="role" name="role">
                      <option value selected>------Chọn tài khoản--------</option>
                      <option value="admin">Admin</option>
                      <option value="client">Client</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="Email">
                    <% if (exist.email) { %>
                      <script>
                          const email = document.getElementById('email');
                          if (email.value.trim() === "") {
                              email.classList.add('required');
                              email.placeholder = 'Email đã tồn tại';
                              e.preventDefault();
                          } else {
                              email.classList.remove('required');
                          }
                      </script>
                  <% } %>
                  </div>
                  <div class="form-group">
                    <div class="form-group">
                      <label for="file-img">Tải ảnh lên</label>
                      <input type="file" name="img" id="file-img" style="display: none;">
                      <div id="imgs">
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="phone">Số điện thoại</label>
                    <input type="text" class="form-control form-control-lg" id="phone" name="phone" placeholder="Số điện thoại">
                  </div>
                  <div class="form-group">
                    <label for="pass">Mật khẩu</label>
                    <input type="text" class="form-control form-control-lg" id="pass" name="pass" placeholder="Mật khẩu">
                  </div>
                  <div class="form-group">
                    <label for="repass">Nhập lại mật khẩu</label>
                    <input type="text" class="form-control form-control-lg" id="repass" name="repass" placeholder="Nhập lại mật khẩu">
                  </div>
                 
                  <div class="mt-3">
                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn register" type="submit">SIGN UP</a>
                  </div>
                  <div class="text-center mt-4 font-weight-light"> Already have an account? <a href="/" class="text-primary">Login</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/admin/asset/vendors/js/vendor.bundle.base.js"></script>
    <script src="/admin/asset/js/off-canvas.js"></script>
    <script src="/admin/asset/js/hoverable-collapse.js"></script>
    <script src="/admin/asset/js/misc.js"></script>
    <script src="/js/index.js"></script>
    <!-- endinject -->
  </body>
</html>