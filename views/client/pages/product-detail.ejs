<!-- Product Details Section Begin -->
<section class="product-details spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="product__details__pic" style="display: flex">
          <div
            class="product__details__pic__left product__thumb nice-scroll"
          ></div>
          <div class="product__details__pic__right" style="flex: 1"></div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="product__details__text">
          <h3 style="font-size: 20px"></h3>
          <div class="rating">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <span>( 138 reviews )</span>
          </div>
          <div class="product__details__price"><span></span></div>
          <p>
           
          </p>
          <div class="product__details__button">
            <div class="quantity">
              <span>Số lượng: <strong>0</strong></span>
              <div class="pro-qty">
                <input type="text" value="1" />
              </div>
            </div>
            <a style="cursor: pointer;" class="cart-btn"
              ><span class="icon_bag_alt"></span>Thêm giỏ hàng</a
            >
          </div>
          <div class="product__details__widget">
            <ul>
              <li>
                <span>Sẵn có:</span>
                <div class="stock__checkbox">
                  <label for="stockin">
                    Còn hàng
                    <input type="checkbox" id="stockin" />
                    <span class="checkmark"></span>
                  </label>
                </div>
              </li>
              <li>
                <span>Màu sẵn có:</span>
                <div class="color__checkbox"></div>
              </li>
              <li>
                <span>Size sẵn có:</span>
                <div class="size__btn"></div>
              </li>
              <li>
                <span>Khuyến mãi:</span>
                <p>Miễn phí vận chuyển</p>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="product__details__tab">
          <ul class="nav nav-tabs">
            <li class="nav-item" style="width: 100%;">
              <h4 style="text-align: center; font-size: 18px">
                Đánh giá ( 2 )
              </h4>
              <div class="list-feedback" style="min-height: 100px;text-align: center;padding-top: 20px;">
                <span>Không có đánh giá</span>
              </div>
            </li>
          </ul>
          <div class="tab-content"></div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="related__title">
          <h5>Sản phẩm tương tự</h5>
        </div>
      </div>
      <div class="property__gallery" style="display: flex; width: 100%"></div>
    </div>
  </div>
</section>

