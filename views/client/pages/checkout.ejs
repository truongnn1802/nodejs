<%- include('../partials/header')%>
<div class="breadcrumb-option" style="margin-top: 60px">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__links">
          <a href="/client"><i class="fa fa-home"></i>Trang chủ</a>
          <span>Giỏ hàng</span>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->

<!-- Checkout Section Begin -->
<section class="checkout spad" style="padding-top: 40px">
  <div class="container">
    <form action="#" class="checkout__form">
      <div class="row">
        <div class="col-lg-8">
          <h5>Chi tiết đơn hàng</h5>
          <div class="row">
            <div class="col-lg-12">
              <div class="checkout__form__input">
                <p>Tên khách hàng <span>*</span></p>
                <input type="text" id="name"/>
              </div>
              <div class="checkout__form__input">
                <p>Địa chỉ <span>*</span></p>
                <input type="text" placeholder="Địa chỉ" id="address"/>
              </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
              <div class="checkout__form__input">
                <p>Phone <span>*</span></p>
                <input type="text" id="phone"/>
              </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
              <div class="checkout__form__input">
                <p>Email <span></span></p>
                <input type="text" id="email"/>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="checkout__form__checkbox"></div>
              <div class="checkout__form__input">
                <p>Ghi chú <span></span></p>
                <textarea
                id="note"
                  rows="6"
                  style="width: 100%; border-color: #e1e1e1"
                  placeholder="Ghi chú về đơn hàng của bạn, ví dụ: ghi chú đặc biệt cho giao hàng."
                ></textarea>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4" style="padding-top: 30px;">
          <div class="checkout__order">
            <h5>Đơn hàng</h5>
            <div class="checkout__order__product" style="min-height: 180px;">
              <ul>
                <li>
                  <span class="top__text">Sản phẩm</span>
                  <span class="top__text__right">Giá</span>
                </li>
                <div class="list-prd"></div>
              </ul>
            </div>
            <div class="checkout__order__total">
              <ul>
                <li>Tổng <span class="payment">0</span></li>
                
              </ul>
            </div>
            <div class="checkout__order__widget">
              <h3
                style="font-size: 16px; font-weight: 600; margin-bottom: 10px"
              >
                Phương thức thanh toán
              </h3>
              <label for="cash">
                Tiền mặt
                <input type="radio" id="cash" name="payment" value="cash" />
                <span class="checkmark"></span>
              </label>
              <label for="momo">
                Momo
                <input type="radio" id="momo" name="payment" value="momo" />
                <span class="checkmark"></span>
              </label>
              <span id="qr-momo"></span>
            </div>
            <button type="submit" class="site-btn">Thanh toán</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

<%- include('../partials/footer')%>
